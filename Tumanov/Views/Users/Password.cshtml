@model Site.ViewsModels.Users.PasswordUsersViewsModels
@{ 
    ViewData["Title"] = "Change password";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Password" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
            </div>

            <a asp-action="Index" class="btn btn-outline-dark">Back</a>
            <button type="submit" class="btn btn-outline-dark">Change</button>
        </form>
    </div>
</div>
