@model IEnumerable<Site.Models.User>
@{ 
    ViewData["Title"] = "Users";
}


<a asp-action="Create" asp-controller="Users" class="btn btn-outline-primary">Create</a>

<h1>@ViewData["Title"]</h1>

<table class="table">
    <tr><th>Email</th><th>Year</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Email</td>
            <td>@item.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Change</a>

                    <a class="btn btn-outline-primary" asp-action="Password" asp-route-id="@item.Id">ChangePassword</a>

                    <button type="submit" class="btn btn-outline-danger">
                        Delete
                    </button>

                </form>
            </td>
        </tr>
    }
</table>