@using Microsoft.AspNetCore.Identity
@model Site.ViewsModels.Roles.RolesViewModels

@{ 
    ViewData["Title"] = "Access rights";
}

<h2>Change role for user @Model.UserEmail</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Roles">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <div class="form-group">
                @foreach (var item in Model.AllRoles)
                {
                    <input type="checkbox" name="roles" value="@item.Name"
                           @(Model.UserRoles.Contains(item.Name) ? "checked=\"checked\"" : "") />@item.Name <br />
                    }
            </div>

            <a asp-action="Userlist" class="btn btn-outline-dark">Back</a>
            <button type="submit" class="btn btn-outline-dark">Save</button>
        </form>
    </div>
</div>